<% let page = 'New Picture'; %>

<% include ../partials/header.ejs %>
<% include ../partials/nav.ejs %>

<div class="page-header" style="background-image: url('/images/background.jpg');">
    <div class="container" style="margin-top: 500px;">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-5 ml-auto mr-auto">
                <% if(error && error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
                <% } %>
                <div class="card card-login">
                    <form class="form" method="POST" action="/gallery" style="min-height: 250px;">
                        <div class="card-header card-header-primary text-center" id="login_color">
                            <h4 class="card-title">Create new Picture</h4>
                        </div>
                        <div class="card-body">
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">
                                                title
                                            </i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="title" placeholder="title">
                                </div>
                            </span>
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">
                                                perm_identity
                                            </i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="name" placeholder="name">
                                </div>
                            </span>
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">photo_camera</i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="image" placeholder="image url">
                                </div>
                            </span>
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">person</i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="credit" placeholder="credit">
                                </div>
                            </span>
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">photo</i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="thumbnail"
                                           placeholder="thumbnail (ignore if picture is landscape">
                                </div>
                            </span>
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">add_location</i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="location" placeholder="location">
                                </div>
                            </span>
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">my_location</i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="coordinate" placeholder="coordinate">
                                </div>
                            </span>
                            <hr>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" value="home" name="page"
                                           type="checkbox">
                                    Home Page
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                                <label class="form-check-label">
                                    <input class="form-check-input" value="gallery" name="page"
                                           type="checkbox">
                                    Gallery Page
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                            <hr>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" value="landscape" name="orientation"
                                           type="checkbox">
                                    Landscape
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                                <label class="form-check-label">
                                    <input class="form-check-input" value="portrait" name="orientation"
                                           type="checkbox">
                                    Portrait
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                            <hr>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" value="work" name="type" type="checkbox"> Works
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                                <label class="form-check-label">
                                    <input class="form-check-input" value="studio" name="type" type="checkbox"> Studio
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                                <label class="form-check-label">
                                    <input class="form-check-input" value="painting" name="type" type="checkbox">
                                    Digital Painting
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                            <hr>
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">description</i>
                                        </span>
                                    </div>
                                    <textarea class="form-control" name="description"
                                              placeholder="description"></textarea>
                                </div>
                            </span>
                        </div>
                        <div class="footer text-center">
                            <button class="btn" style="color: white; background: #2284a2;" role="button">
                                Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-5 col-md-5 col-sm-5 ml-auto mr-auto">
                <div class="title">
                    <h1>Upload Picture</h1>
                    <p>Generate Picture Link</p>
                </div>
                <div class="dropzone">
                    <div class="info"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/core/jquery.min.js" type="text/javascript"></script>
<script src="/javascripts/core/popper.min.js" type="text/javascript"></script>
<script src="/javascripts/core/bootstrap-material-design.min.js" type="text/javascript"></script>
<script src="/javascripts/moment.min.js"></script>
