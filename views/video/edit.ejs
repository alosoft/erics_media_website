<div class="page-header" style="background-image: url('/images/background.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-5 ml-auto mr-auto">
                <% if(error && error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
                <% } %>
                <div class="card card-login">
                    <form class="form" method="POST" action="/gallery/<%= picture._id %>/edit?_method=PUT"
                          style="min-height: 250px;">
                        <div class="card-header card-header-primary text-center" id="login_color">
                            <h4 class="card-title">Add Video</h4>
                        </div>
                        <div class="card-body">

                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">videocam</i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="picture[video]"
                                           value="<%= picture.video %>" required>
                                </div>
                            </span>
                            <span class="bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">person</i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="picture[name]"
                                           value="<%= picture.name %>" required>
                                </div>
                            </span>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" value="video" name="type" type="checkbox" checked>
                                    Video
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>

                        </div>
                        <div class="footer text-center">
                            <button class="btn" style="color: white; background: #2284a2;" role="button">
                                Edit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

