<section class="home_gallery_area p_120">
    <div class="container">
        <% if(activeUser){ %>
        <a href="/gallery/new" class="button">
            <p>add new picture</p>
        </a>
        <% } %>
        <div class="isotope_fillter">
            <ul class="gallery_filter list">
                <li class="active" data-filter="*"><a href="#">All</a></li>
                <li data-filter=".painting"><a href="#">Digital Painting</a></li>
                <li data-filter=".studio"><a href="#">Studio</a></li>
                <li data-filter=".work"><a href="#">Works</a></li>
            </ul>
        </div>
    </div>
    <div class="container box_1620">
        <div class="gallery_f_inner row imageGallery1"
             style="position: relative;
             height: 743.234px;">

            <% picture.forEach(function(pic){ %>

            <div class="card-box col-md-4 col-md-4 col-sm-6 <%= pic.type %>">
                <div class="card card-with-border anime" data-background="image" data-src="<%= pic.image %>">
                    <div class="header">
                        <h6 class="category">
                            <%= pic.name %>
                        </h6>
                    </div>
                    <div class="content text-center">
                        <p class="description"><%= pic.description %></p>
                    </div>
                    <div class="footer text-center">
                        <a href="/gallery/<%= pic._id %>" class="btn btn-fill btn-round" style="background-color: #2284a2">Read More</a>
                    </div>
                    <!--<div class="filter"></div>-->

                </div> <!-- end card -->
            </div>
            <% }) %>

        </div>
        <div class="button_more">
            <a class="btn theme_btn" href="#">Load More Images</a>
        </div>
    </div>
</section>


