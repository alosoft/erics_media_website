<section class="home_gallery_area p_120">
    <div class="container">
        <div class="isotope_fillter">
            <ul class="gallery_filter list">
                <li class="active" data-filter="*"><a href="#">All</a></li>
                <li data-filter=".painting"><a href="#">Digital Painting</a></li>
                <li data-filter=".studio"><a href="#">Studio</a></li>
                <li data-filter=".work"><a href="#">Works</a></li>
                <li data-filter=".video"><a href="#">Videos</a></li>
            </ul>
        </div>
    </div>
    <div class="container box_1620">
        <div class="gallery_f_inner row imageGallery1"
             style="position: relative;
             height: 743.234px;">
            <% picture.forEach(function(pic){ %>
            <% let page = pic.page; %>
            <% let video = pic.video; %>
            <% if (video) { %>
            <div class="card-box col-lg-3 col-md-4 col-sm-6 ml-auto mr-auto <%= pic.type %>">
                <div class="card card-plain card-blog">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="<%= pic.video %>"
                                allowfullscreen></iframe>
                    </div>
                    <div class="card-body">
                        <p class="card-description">
                            by <%= pic.name %>
                        </p>
                    </div>
                    <a href="<%= pic.video %>" class="light anime">
                    </a>
                </div>
                <% if (activeUser){ %>
                <a class="btn btn-primary" style="margin: 10px"
                   href="/gallery/<%= pic._id %>/edit_video">Edit
                </a>
                <form id="form" action="/gallery/<%= pic._id %>?_method=DELETE" method="POST"
                      style="display: inline; margin: 10px;">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>
            </div>
            <% } %>
            <% if (page === 'gallery'){ %>
            <div class="card-box col-lg-3 col-md-4 col-sm-6 ml-auto mr-auto <%= pic.type %>">
                <div class="card card-plain card-blog">
                    <div class="card-header card-header-image">
                        <a href="<%= pic.image %>" class="light anime">
                            <% let orientation = pic.orientation; %>
                            <% if (orientation === 'portrait'){ %>
                            <img class="img img-raised thumbnail" src="<%= pic.thumbnail %>">
                            <% } else { %>
                            <img class="img img-raised thumbnail" src="<%= pic.image %>">
                            <% } %>
                        </a>
                        <div class="colored-shadow"
                             style="background-image: url(&quot;/images/alonso.jpg&quot;); opacity: 1;"></div>
                    </div>
                    <div class="card-body">
                        <p class="card-description">
                            by <%= pic.credit %>
                        </p>
                        <a href="/blog" class="nav-link"> Read More </a>
                    </div>
                    <% if (activeUser){ %>
                    <a class="btn btn-primary" style="margin: 10px"
                       href="/gallery/<%= pic._id %>/edit">Edit
                    </a>
                    <form id="form" action="/gallery/<%= pic._id %>?_method=DELETE" method="POST"
                          style="display: inline; margin: 10px;">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <% } %>
            <% }) %>
